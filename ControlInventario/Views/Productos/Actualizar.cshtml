@{
    ViewData["Title"] = "Actualizar Productos";
}


<div class="d-flex justify-content-between">

    <div class="d-flex flex-column">
        <label for="inClave">Clave</label>
        <input id="inClave" class="form-control-sm" type="text" minlength="1" maxlength="6" />
    </div>

    <div class="d-flex flex-column">
        <label for="inNombre">Nombre</label>
        <input id="inNombre" class="form-control-sm" type="text" minlength="1" maxlength="100" />
    </div>

    <div class="d-flex flex-column">
        <label for="inPrecio">Precio</label>
        <input id="inPrecio" class="form-control-sm" type="number" min="0" step="0.01" />
    </div>

    <button id="btnAgregar" class="btn btn-sm btn-outline-success" onclick="ActualizarProductos(true)">Agregar Producto</button>
    <button id="btnQuitar" class="btn btn-sm btn-outline-danger" onclick="ActualizarProductos(false)">Quitar Producto</button>

</div>

<script defer>

    async function ActualizarProductos(Tipo)
    {
        let Parametros = {
            Producto: {
                Clave: document.querySelector("#inClave").value,
                Nombre: document.querySelector("#inNombre").value,
                Precio: parseFloat(document.querySelector("#inPrecio").value)
            },
            Tipo: Tipo
        }

        let JsonResult = await inventarioFetch('@Url.Action("ModificarProductos", "Productos")', 'POST', Parametros);

        if(JsonResult.resultado){
            alert(JsonResult.mensaje);
        }
        else{
            alert(JsonResult.mensaje);
        }
    }

</script>

